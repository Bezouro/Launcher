include top
.content
    include layout
    .login-page
        .form
            h1 Log In
            h3 Use your Mojang account to log in
            form.login-form
                input(type="email", placeholder="email")
                input(type="password", placeholder="password")
                button(onclick="return false") login
                p.message
                    | Don't have an account?
                    a(href="https://minecraft.net/store/minecraft/#register")  Register one here!